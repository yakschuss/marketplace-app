<div class="container">
  <div class="form-title">New TradeShow</div>
  <br/>
  <div class="form">
    <div class="form-group-columns">
      <%= form_for [:admin, @tradeshow] do |f| %>
        <%= f.text_field :title, placeholder: "Title" %>
        <br/>
        <br/>
        <%= f.text_area :description, placeholder: "Description" %>

        <br/>
        <br/>
        <%= f.text_field :venue_name, placeholder: "Venue" %>
        <br/>
        <%= f.text_field :location, placeholder: "Address" %>
        <br/>

        <%= f.date_select(:date , :start_year => 2016) %>
        <br/>
        <br/>
      <!-- <div class="venue-form">
        Venue:
        <%# f.select :venue,  Venue.all.map {|v| v.name }, e %>
      </div> -->
          <%= render partial: "booth_fields", locals: {f: f} %>
          <%= link_to "", "#", id: :booth_add, class: "fa-1.5x fa fa-plus-circle booth-form-add" %>
          <br/>
          <br/>

          <div class="spacer"></div>
        <%= f.submit :save, class: "button" %>
        <% end %>
    </div>
  </div>
</div>
